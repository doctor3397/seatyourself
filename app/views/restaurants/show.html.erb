<%= image_tag @restaurant.image %>

  <div>
   <h3><%= @restaurant.name %></h3>
   <p><%= @restaurant.city %></p>
   <p><%= @restaurant.capcity %></p>


 </div>


<div class="Book">
  <% if session[:user_id] %>

  <h2> Book This Restaurant</h2>

  <%= form_for(@reservation) do |f| %>

    <%= f.hidden_field :restaurant_id %>

    <div class="field">
     <%= f.label :party_size %><br />
     <%= f.text_field :party_size %>
    </div>

    <div class="field">
     <%= f.label :date %><br />
     <%= f.text_field :date %>
    </div>

    <div class="actions">
     <%= f.submit %>
    </div>

    <%end%>

    <% else %>
    <p> Please <a href="/users/new"> Sign Up</a> or <a href="/sessions/new">Log In</a> to book this restaurant </p>
  <% end %>

</div>
